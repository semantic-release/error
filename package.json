    "nyc": "^11.2.1",
    "semantic-release": "^8.0.0",
    "tap": "^10.7.2"
    "prettier": "^1.7.0",
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": 2
    }
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/semantic-release/error#readme",
